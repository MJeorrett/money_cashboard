<% if @table_data.empty? || @table_data.nil?%>

  <%= erb(:'partials/no_data_message') %>

<% else %>

  <table>
    <thead>

      <tr class="header-row">
        <% @table_headers.each do |table_header| %>

          <th><%= table_header %></th>
        <% end %>
      </tr>

    </thead>

    <tbody>

      <% @table_data.each do |data_row| %>
        <tr>
          <% @table_data.first.keys.each do |column_name| %>
            <td><%= data_row[column_name] %></td>
          <% end %>
        </tr>
      <% end %>

    </tbody>

  </table>

<% end %>
